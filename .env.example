# Convex
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud
CONVEX_DEPLOY_KEY=your-convex-deploy-key

# Auth0 (for dashboard authentication) - @auth0/nextjs-auth0 v4
AUTH0_SECRET=use-openssl-rand-hex-32-to-generate
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
APP_BASE_URL=https://integration.uniteperformance.no
AUTH0_BASE_URL=http://localhost:3000
# Public app URL (optional). Used for absolute logout returnTo so Auth0 redirects back to your app. Should match the current origin (e.g. AUTH0_BASE_URL in dev).
NEXT_PUBLIC_APP_URL=https://integration.uniteperformance.no
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com/
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id

# Auth0 Machine-to-Machine (M2M) credentials — used by Convex actions
# to sync roles and membership to Auth0 Organizations (RBAC).
# Create a M2M application in Auth0 and authorize it for the Management API
# with scopes: update:users, read:roles, read:organization_members,
# create:organization_members, delete:organization_members,
# read:organization_member_roles, create:organization_member_roles,
# delete:organization_member_roles, create:organization_invitations,
# read:organization_invitations, delete:organization_invitations
# These are set as Convex environment variables (not Next.js env vars).
AUTH0_M2M_CLIENT_ID=your-m2m-client-id
AUTH0_M2M_CLIENT_SECRET=your-m2m-client-secret

# Auth0 Organization Invitations — used by Convex to send invitations via Auth0.
# AUTH0_APP_CLIENT_ID: The Auth0 Application (SPA/Web) client ID that invitees
# should authenticate with when accepting the invitation.
# AUTH0_INVITATION_CONNECTION_ID: (optional) The Auth0 Connection ID to force
# invitees to authenticate through (e.g. "con_abc123" for Username-Password-Authentication).
# AUTH0_ACTION_SECRET: Shared secret for the Auth0 Post-Login Action HTTP callback.
AUTH0_APP_CLIENT_ID=your-auth0-app-client-id
AUTH0_INVITATION_CONNECTION_ID=
AUTH0_ACTION_SECRET=use-openssl-rand-hex-32-to-generate

# Sentry (error tracking and performance monitoring)
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@o0.ingest.sentry.io/0
SENTRY_DSN=https://your-dsn@o0.ingest.sentry.io/0
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# AI Coding Assistants (optional - forwarded into devcontainer via remoteEnv)
# Claude Code: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=
# OpenAI Codex: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Note: Rubic and Tripletex API credentials are now managed per-organization
# within the application's Settings page, stored in Convex.
